<odoo>
  <!-- Snippet Content-->
  <template id="s_jitsi" name="Jitsi Meet">
    <section class="website_jitsi">
      <div id="meet">
        <p class="loading" id="message">Loading ...</p>
      </div>
    </section>
    <section class="container readable o_website_form_builder">
            <form
                accept-charset="UTF-8"
                action="/website_form/"
                class="s_website_form col-md-12 mt32"
                data-model_name=""
                data-force_action=""
                data-success_page=""
                enctype="multipart/form-data"
                method="post"
            >
                <div class="o_website_form_fields">
                    <div class="o_not_editable d-none" t-translation="off">
                        This placeholder prevents its parent from
                        disappearing when emptied
                    </div>
                </div>
            </form>
        </section>
  </template>

  <!-- Add snippets to menu -->
  <template id="add_snippet_structure_to_menu" inherit_id="website.snippets">
    <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
      <t t-snippet="erplibre_website_snippets_jitsi.s_jitsi" t-thumbnail="/erplibre_website_snippets_jitsi/static/src/img/web_cam.png"/>
    </xpath>
  </template>

  <!-- Add stylesheet & javascript-->
  <template id="assets_frontend_erplibre_website_snippets_cards" inherit_id="website.assets_frontend">
    <xpath expr="//link[last()]" position="after">
      <link rel="stylesheet" type="text/scss" href="/erplibre_website_snippets_jitsi/static/src/scss/snippet_jitsi.scss" />
    </xpath>

    <xpath expr="//script[last()]" position="after">
      <script src="https://meet.jit.si/external_api.js" X-crossorigin="anonymous"></script>
      <script type="text/javascript" X-type="module" src="/erplibre_website_snippets_jitsi/static/src/js/website_snippet_jitsi.js"/>
      <script type="text/javascript" X-type="module" src="/erplibre_website_snippets_jitsi/static/src/js/widgets.js"/>
      <script type="text/javascript" X-type="module" src="/erplibre_website_snippets_jitsi/static/src/js/snippets.js"/>
    </xpath>
  </template>
</odoo>

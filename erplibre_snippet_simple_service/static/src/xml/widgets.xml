<template>
    <t t-name="erplibre_snippet_simple_service.ParamsForm">
        <form>
            <div class="form-group">
                <label for="model">Choose this form's action</label>
                <select id="model" class="form-control">
                    <t t-foreach="widget.rooms" t-as="room">
                        <option
                            t-att-value="room.id"
                            t-att-selected="room === widget.chosen ? 'selected' : null"
                        >
                            <t t-esc="room.url"/>
                        </option>
                    </t>
                </select>
            </div>
        </form>
    </t>
    <t t-name="erplibre_snippet_simple_service.UsersParamsForm">
        <form>
            <div class="form-group">
                <label for="model">Choose users</label>
                <select id="model" class="form-control">
                    <t t-foreach="widget.users" t-as="user">
                        <option
                            t-att-value="user.id"
                            t-att-selected="user === widget.chosen ? 'selected' : null"
                        >
                            <t t-esc="user.name"/>
                        </option>
                    </t>
                </select>
            </div>
        </form>
    </t>
</template>

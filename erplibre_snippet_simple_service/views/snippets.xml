<odoo>
    <!-- Snippet Content-->
    <template id="s_erplibre_snippet_simple_service" name="ERPLibre snippet simple service">
        <section class="simple_service">
            <div id="meet">
                <p class="loading" id="message">Loading ...</p>
            </div>
        </section>
    </template>
    <!-- Add snippets to menu -->
    <template id="snippet_effect" inherit_id="website.snippets">
        <xpath expr="//div[@id='snippet_effect']/div[hasclass('o_panel_body')]" position="inside">
            <t
                t-snippet="erplibre_snippet_simple_service.s_erplibre_snippet_simple_service"
                t-thumbnail="/erplibre_snippet_simple_service/static/description/icon.png"
            />
        </xpath>
    </template>
    <!-- Add stylesheet and Javascript -->
    <template id="assets_frontend" inherit_id="website.assets_frontend">
        <xpath expr="//link[last()]" position="after">
            <link
                rel="stylesheet"
                type="text/scss"
                href="/erplibre_snippet_simple_service/static/src/scss/erplibre_snippet_simple_service.scss"
            />
        </xpath>
        <xpath expr="//script[last()]" position="after">
            <script
                type="text/javascript"
                src="/erplibre_snippet_simple_service/static/src/js/website.erplibre_snippet_simple_service.animation.js"
            />
        </xpath>
    </template>

    <template id="assets_editor" inherit_id="website.assets_editor">
        <xpath expr=".">
            <script type="text/javascript"
                    src="/erplibre_snippet_simple_service/static/src/js/widgets.js"/>
        </xpath>
    </template>

    <!-- Add snippets options -->
    <template id="snippet_options" inherit_id="website.snippet_options">
        <xpath expr=".">
            <!-- The form itself -->
            <div data-js="erplibre_snippet_simple_service" data-selector=".simple_service"/>

        </xpath>
    </template>

</odoo>
